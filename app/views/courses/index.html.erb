<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Section a marks</th>
      <th>Section b marks</th>
      <th>Attendance</th>
      <th>Assesment</th>
      <th>Grade</th>
      <th>Marks</th>
      <th>Total marks</th>
      <th>Percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.section_a_marks %></td>
        <td><%= course.section_b_marks %></td>
        <td><%= course.attendance %></td>
        <td><%= course.assesment %></td>
        <td><%= course.grade %></td>
        <td><%= course.marks %></td>
        <td><%= course.total_marks %></td>
        <td><%= course.percentage %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

